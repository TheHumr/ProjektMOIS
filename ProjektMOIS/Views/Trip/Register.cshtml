@{
    ViewBag.Title = "Trip register";
}


<hr>
<h1>Rezervace k zájezdu</h1>

<div class="panel panel-success">
    <div class="panel-heading ">
        <div class="form-group">

            <h3><b>@ViewBag.Trip.Description<b></h3>
        </div>
        <div class="form-group">
            <label class="control-label">
                Cena
            </label>
            <p>@ViewBag.Trip.Prize,- Kč</p>
            <label class="control-label">
                Datum konání
            </label>
            <p>@ViewBag.Trip.DateStart - @ViewBag.Trip.DateEnd</p>
        </div>
    </div>

    <div class="panel-body">

        <div class="form-container">

            <div class="form-group">
                <label class="control-label">
                    Jméno a příjmení (zákazníka)
                </label>
                <input class="form-control" type="text" placeholder="Jan Novák" />
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">
                        Počet cestujících
                    </label>
                    <input class="form-control" type="number" value="4" min="0" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">
                        z toho děti
                    </label>
                    <input class="form-control" type="number" value="1" min="0" />
                </div>
            </div>

            <!--
            <div class="form-group">
            <label class="control-label">Platba
            </label>
            <select class="form-control" >
                <option>Převodem</option>
                <option>Platební kartou</option>
                <option>Hotově na pobočce</option>
            </select>
            </div>
                -->




            <div class="form-group">
                <label class="control-label">
                    Poznámka k rezervaci
                </label>
                <textarea class="form-control" rows="5" placeholder="Rád bych se dozvěděl o..."></textarea>
            </div>


            <div class="form-group">
                <span class="label label-danger ">
                    Povrzení rezervace musí být učiněno na pobočce nejpozději do 25.4.2017, jinak rezervace propadá.
                </span>
            </div>

            <div class="form-group">
                <p>
                    <a class="btn btn-danger btn-large pull-right">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true">
                        </span>&nbsp;Zrušit
                    </a>
                </p>
                <p>
                    <a class="btn btn-primary btn-large pull-right">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true">
                        </span>&nbsp;Uložit
                    </a>
                </p>
            </div>


        </div>


    </div>
</div>

<hr>

